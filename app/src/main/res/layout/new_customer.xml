<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:weightSum="1">

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCustomers"
            android:background="@drawable/background_round_corner_edittext"
            android:text="Customers"
            android:layout_weight="0.31" />

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTransaction"
            android:text="Transaction"
            android:background="@drawable/background_round_corner_edittext"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.31" />

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogout"
            android:text="Logout"
            android:background="@drawable/background_round_corner_edittext"
            android:layout_weight="0.31" />
    </LinearLayout>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtUsername"
        android:layout_margin="15dp"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/Addorupdatecust"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add/Update Customer"
        android:textStyle="bold"
        android:textSize="20dp"
        android:singleLine="true"
        android:textColor="@color/abc_primary_text_material_light"
        android:layout_alignWithParentIfMissing="true"
        android:typeface="serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtName"
        android:gravity="center"
        android:hint="Name"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtMobile"
        android:gravity="center"
        android:hint="Mobile" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtAddress"
        android:gravity="center"
        android:hint="Address" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtDeposit"
        android:gravity="center"
        android:hint="Deposit" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

    <Button
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textStyle="bold"
        android:background="@drawable/background_round_corner_edittext"
        android:id="@+id/btnNewCustomer"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"/>

        <Button
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textStyle="bold"
            android:background="@drawable/background_round_corner_edittext"
            android:id="@+id/btnClrCustomer"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="24dp"/>
    </LinearLayout>


</LinearLayout>