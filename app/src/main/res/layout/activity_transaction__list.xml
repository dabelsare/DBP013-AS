            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:onClick="ToDate"-->
            <!--android:text="Show" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search transaction here"
            />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7">
            <TextView
                android:id="@+id/textViewNameHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Customer"
                android:textAlignment="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:textColor="#000" />
            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Date"
                android:textAlignment="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:textColor="#000" />
            <TextView
                android:id="@+id/textViewDJar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Type"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:textColor="#000" />
            <TextView
                android:id="@+id/textViewDQty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Qty"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:textColor="#000" />
            <TextView
                android:id="@+id/textViewBalanceHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Balance"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:textColor="#000" />
            <TextView
                android:id="@+id/textViewRJarType"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="R_Type"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:textColor="#000" />
            <TextView
                android:id="@+id/textViewRQty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="R_Qty"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="1.0"
                android:textColor="#000" />
            </LinearLayout>
            <include layout="@layout/content_transaction__list" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>