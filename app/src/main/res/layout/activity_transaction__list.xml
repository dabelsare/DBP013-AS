<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.smp.aquasmart.Transaction_List">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:weightSum="1">

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCustTrList"
            android:background="@drawable/background_round_corner_edittext"
            android:text="Customers"
            android:layout_weight="0.31" />

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddCustTrList"
            android:text="Add Customer"
            android:background="@drawable/background_round_corner_edittext"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.31" />

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogoutTrList"
            android:text="Logout"
            android:background="@drawable/background_round_corner_edittext"
            android:layout_weight="0.31" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search transaction here"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/textViewNameHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Customer"
            android:layout_weight="1.0"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textViewBalanceHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Balance"
            android:layout_weight="1.0"
            android:textColor="#000" />
        <TextView
            android:id="@+id/textViewRemainJar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="R-Jar"
            android:layout_weight="1.0"
            android:textColor="#000" />
        <TextView
            android:id="@+id/textViewRemainBottle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="R-Bottle"
            android:layout_weight="1.0"
            android:textColor="#000" />
    </LinearLayout>
    <include layout="@layout/content_transaction__list" />
</LinearLayout>